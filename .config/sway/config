# theming preferences
include gruvbox
set $font scientifica 18px
set $wallpaper ~/Pictures/wallpaper.jpg

set $mod Mod4
# vi movement
set $left h
set $down j
set $up k
set $right l

# terminal and application launcher
set $term alacritty
set $menu BEMENU_BACKEND=wayland bemenu-run --fn "$font" --tb "$green" --hb "$red" \
  --tf "$bg" --hf "$bg" --nb "$bg" --fb "$bg" --ff "$fg" -p run -b --no-exec \
  | xargs swaymsg exec --

# auto monitor configuraiton
exec_always kanshi

# styling
font pango:$font
default_border pixel 1
# class                 border  bgcolor text    indicator   child_border
client.focused		$green  $bg     $fg     $fg         $green
# TODO: revisit when sway has a fix. We ought to keep all g-settings in here
# and not duplicated across here and gtk-2.0/settings.ini
set $cursor oreo_black_cursors
set $cursor_size 32

seat seat0 xcursor_theme $cursor $cursor_size

exec swaybg -c "$bg" -i $wallpaper -m fill
# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 300 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.
set $lock swaylock -f -c "$bg" -i $wallpaper -s center
exec swayidle -w \
  timeout 600 '$lock' \
  timeout 900 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
  before-sleep '$lock'

# trackpad config
input type:touchpad {
  tap enabled
  natural_scroll enabled
  scroll_factor 0.75
}

# launching(sway)
set $mode_launcher Launch: [f]irefox [t]mux
bindsym $mod+Return exec $term
bindsym $mod+space mode "$mode_launcher"
# launching(dmenu)
bindsym $mod+Shift+space exec $menu
# closing
bindsym $mod+w kill

mode "$mode_launcher" {
    bindsym f exec firefox-wayland; mode "default"
    bindsym t exec alacritty -e tmux; mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

# floating drag modifier
floating_modifier $mod normal

# focusing
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# moving
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# 6 workspaces (3 named)
set $w1 1 web
set $w2 2 vi
set $w3 3 sh
bindsym $mod+1 workspace number $w1
bindsym $mod+2 workspace number $w2
bindsym $mod+3 workspace number $w3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6

bindsym $mod+Shift+1 move container to workspace number $w1
bindsym $mod+Shift+2 move container to workspace number $w2
bindsym $mod+Shift+3 move container to workspace number $w3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6

# window assigned to workspaces
assign [class="Firefox"] $w1

# splitting
bindsym $mod+v splith
bindsym $mod+s splitv

# fullscreen and toggle floating
bindsym $mod+f floating toggle
bindsym $mod+Shift+f fullscreen

# scratchpad, useless i guess
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

bindsym $mod+r mode "resize"
mode "resize" {
    # resize
    bindsym $left resize shrink width 20px
    bindsym $down resize grow height 20px
    bindsym $up resize shrink height 20px
    bindsym $right resize grow width 20px

    # exit
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# media keys binds
bindsym XF86AudioMute         exec amixer set Master toggle
bindsym XF86AudioLowerVolume  exec amixer set Master 2%-
bindsym XF86AudioRaiseVolume  exec amixer set Master 2%+
bindsym XF86AudioMicMute      exec amixer set Capture toggle
bindsym XF86MonBrightnessUp   exec brightnessctl set 2%+
bindsym XF86MonBrightnessDown exec brightnessctl set 2%-

bar {
    position bottom
    status_command while date +'%Y-%m-%d %l:%M:%S %p'; do sleep 1; done

    colors {
        statusline $fg
        background $bg

	# class            border   background text
        focused_workspace  $green   $green     $bg
        active_workspace   $green   $green     $bg
        inactive_workspace $bg1     $bg1       $fg
	urgent_workspace   $red     $red       $fg
    }
}
